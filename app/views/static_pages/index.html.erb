<h1> Welcome to our shop </h1>

<h2> Featured items </h2>
    <% @items.each do |item|  %>
        <ul>
            <li><%= link_to item.name, item_path(item) %></li>
        </ul>
    <% end %>
<h2> Featured brands </h2>
    <% @brands.each do |brand|  %>
        <ul>
            <li><%= link_to brand.name, brand_path(brand) %></li>
        </ul>
    <% end %>

<h2> Featured categories </h2>
    <% @categories.each do |category|  %>
        <ul>
            <li><%= link_to category.name, category_path(category) %></li>
        </ul>
    <% end %>

<h2> You can't find what you want? Fill out the form to ask your personnal shopper to buy an item on demand </h2>

<%= form_for(@item) do |f| %>
    Name:<br>
    <%= f.text_field :name %><br>
    Color:<br>
    <%= f.text_field :color %><br>
    Description:<br>
    <%= f.text_area :description %><br>
<% end %>
 