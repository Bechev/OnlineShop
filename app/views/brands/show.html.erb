<h1><%= @brand.name %></h1>

<% @brand.items.each do |item| %>
    <ul>
        <li><%= link_to item.name, [@brand, item] %></li>
    </ul>
<% end %>

<h2> You can't find what you want? Fill out the form to ask your personnal shopper to buy an item on demand </h2>
<%= form_for([@brand, @item]) do |f| %>
    <%= render "items/new_item_form",f: f %>
<% end %>