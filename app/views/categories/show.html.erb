<h1><%= @category.name %></h1>

<% @category.items.each do |item| %>
    <ul>
        <li><%= link_to item.name, [@category, item] %></li>
    </ul>
<% end %>

<h2> You can't find what you want? Fill out the form to ask your personnal shopper to buy an item on demand </h2>
<%= form_for([@category, @item]) do |f| %>
    <br>Name:<br>
    <%= f.text_field :name %><br>
    <br>Brand:<br>
    <%= f.text_field :brand_name %><br>
    <br>Category:<br>
    <%= f.text_field :category_name %><br>
    <br>Color:<br>
    <%= f.text_field :color %><br>
    <br>Description:<br>
    <%= f.text_area :description %><br>
    <%= f.submit %>
<% end %>